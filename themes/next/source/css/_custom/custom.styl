// 透明背景
.sidebar,.header-inner,.comments,.pagination,.site-meta,.post-block,#needsharebutton-float span{
  background-color:transparent;
}
// 主页文章添加阴影效果
.header-inner,.sidebar-inner,.comments,#needsharebutton-float .btn{
  box-shadow: 0 1px 2px 0px rgba(0, 0, 0, 0.1),0 2px 4px 0px rgba(0, 0, 0, 0.1)
  //-webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
  //-moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}
.post-block:hover,.post:hover,.header-inner:hover,.sidebar-inner:hover,.comments:hover,#needsharebutton-float span:hover{
  box-shadow: 0 2px 4px 0px rgba(0, 0, 0, 0.1),
              0 4px 8px 0px rgba(0, 0, 0, 0.1),
              0 8px 16px 0px rgba(0, 0, 0, 0.1),
              0 16px 32px 0px rgba(0, 0, 0, 0.1);
  background-color:#ffffff
}
#needsharebutton-float .btn:hover i{
  color:#49b1f5
}
// 自定义页脚跳动的心样式
@keyframes heartAnimate {
  0%,100%{transform:scale(1);}
  10%,30%{transform:scale(0.9);}
  20%,40%,60%,80%{transform:scale(1.1);}
  50%,70%{transform:scale(1.1);}
}
#animate {
  animation: heartAnimate 1.33s ease-in-out infinite;
}
.with-love {
  color: #49b1f5;
}

// 鼠标样式
body {
  cursor: url("/images/cursor.cur"),auto!important
}
li.sidebar-nav-overview,li.sidebar-nav-toc,.back-to-top,a,button{
  cursor:url("/images/cursor_pointer.cur"), pointer;
}

// 文章内链接文本样式
.post-body p a{
  color: #49b1f5;
  border-bottom: none;
  border-bottom: 1px solid #49b1f5;
  &:hover {
    color: #fc6423;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
}

// 代码块 加圆角
.highlight { border-radius: 5px;}
pre { border-radius: 5px;}

.brand{
  color: #555;
  &:hover{
    color: #49b1f5;
  }
}

// 修改选中字符的颜色
/* webkit, opera, IE9 */
::selection {
  background: #49b1f5;
  color: #f7f7f7;
}
/* firefox */
::-moz-selection {
  background: #49b1f5;
  color: #f7f7f7;
}

// 修改网站头部颜色
.headband {
  height: 3px;
  background: #ffffff;
}
.site-meta {
  padding: 20px 0;
  color: #fff;
}
.site-subtitle {
  margin-top: 10px;
  font-size: 13px;
  color: #ffffff;
}

// 修改按键（button）样式
.btn {
  display: inline-block;
  padding: 0 20px;
  font-size: 14px;
  color: #49b1f5;
  background: #fff;
  border: 2px solid #49b1f5;
  text-decoration: none;
  border-radius: 3px;
  transition-property: background-color;
  transition-duration: 0.2s;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;
  line-height: 2;
}
// 按键（button）点击时样式
.btn:hover {
  border-color: #49b1f5;
  color: #fff;
  background: #49b1f5;
  cursor:url("/images/cursor_pointer.cur"), pointer;
}

// 鼠标移动至文章标题时的效果
.posts-expand .post-title-link::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: #49b1f5;
  visibility: hidden;
  -webkit-transform: scaleX(0);
  -moz-transform: scaleX(0);
  -ms-transform: scaleX(0);
  -o-transform: scaleX(0);
  transform: scaleX(0);
  transition-duration: 0.2s;
  transition-timing-function: ease-in-out;
  transition-delay: 0s;
}

